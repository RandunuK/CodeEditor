<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="0dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_action_text_view_name"
        app:shapeAppearanceOverlay="@style/RoundOutlinedButton.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextButton.IconOnly"
        android:text="@string/selectAll"
        app:iconGravity="textTop"
        app:iconTint="@color/textActionNameColor"
        app:iconPadding="8dp"
        android:textSize="10sp"
        android:textColor="@color/textActionNameColor"
        app:icon="@drawable/round_select_all_20">
    </com.google.android.material.button.MaterialButton>



</androidx.cardview.widget.CardView>