<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_compose_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <io.github.rosemoe.editor.widget.TextActionButton
                android:id="@+id/panel_card_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ta_drawableTop="@drawable/round_select_all_20"
                app:ta_text="@string/selectAll" />

            <io.github.rosemoe.editor.widget.TextActionButton
                android:id="@+id/panel_card_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ta_drawableTop="@drawable/round_content_copy_20"
                app:ta_text="@string/copy" />

            <io.github.rosemoe.editor.widget.TextActionButton
                android:id="@+id/panel_card_paste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ta_drawableTop="@drawable/round_content_paste_20"
                app:ta_text="@string/paste" />

            <io.github.rosemoe.editor.widget.TextActionButton
                android:id="@+id/panel_card_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ta_drawableTop="@drawable/round_content_cut_20"
                app:ta_text="@string/cut" />

            <androidx.cardview.widget.CardView
                android:id="@+id/f_editor_vertical_divider_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <View
                    style="@style/VerticalDivider"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="6dp" />
            </androidx.cardview.widget.CardView>

            <io.github.rosemoe.editor.widget.TextActionButton
                android:id="@+id/panel_card_save_to_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ta_drawableTop="@drawable/round_save_20"
                app:ta_text="@string/saveToProject" />

        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>

